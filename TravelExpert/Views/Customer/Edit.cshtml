@model TravelExpert.Models.Booking

@{
    ViewData["Title"] = "Edit";
}


<br />
<h2 style="color:cadetblue; font-family: cursive">
    Edit Booking</h2><br />
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">

                <div class="form-group">
                    <label asp-for="TravelerCount" class="control-label"></label>
                    <input asp-for="TravelerCount" class="form-control" />
                    <span asp-validation-for="TravelerCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
